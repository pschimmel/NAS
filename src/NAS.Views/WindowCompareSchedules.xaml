<Window x:Class="NAS.WindowCompareSchedules"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:extToolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:resx="clr-namespace:NAS.Resources;assembly=NAS.Resources"
        xmlns:ui="clr-namespace:ES.Tools.UI;assembly=ES.Tools"
        Title="{x:Static resx:NASResources.Comparison}"
        Width="450"
        Height="300"
        Icon="pack://application:,,,/NAS.Views;component/Images/Compare.png"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen">
  <Window.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ui:SharedResourceDictionary Source="pack://application:,,,/NAS.Views;component/CommonResources.xaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Window.Resources>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition />
      <ColumnDefinition />
    </Grid.ColumnDefinitions>
    <StackPanel Grid.ColumnSpan="2" Orientation="Horizontal">
      <TextBlock Margin="5" Text="{x:Static resx:NASResources.DataDate}" />
      <DatePicker Grid.Column="1"
                  Width="150"
                  Margin="2"
                  SelectedDate="{Binding DataDate}" />
    </StackPanel>
    <GroupBox Grid.Row="1"
              Margin="2"
              Header="{x:Static resx:NASResources.Schedule1}">
      <extToolkit:CheckListBox Margin="2"
                               DisplayMemberPath="Name"
                               ItemsSource="{Binding Fragnets1}"
                               SelectedMemberPath="IsChecked">
        <extToolkit:CheckListBox.BorderBrush>
          <SolidColorBrush />
        </extToolkit:CheckListBox.BorderBrush>
      </extToolkit:CheckListBox>
    </GroupBox>
    <GroupBox Grid.Row="1"
              Grid.Column="1"
              Margin="2"
              Header="{x:Static resx:NASResources.Schedule2}">
      <extToolkit:CheckListBox Margin="2"
                               DisplayMemberPath="Name"
                               ItemsSource="{Binding Fragnets2}"
                               SelectedMemberPath="IsChecked">
        <extToolkit:CheckListBox.BorderBrush>
          <SolidColorBrush />
        </extToolkit:CheckListBox.BorderBrush>
      </extToolkit:CheckListBox>
    </GroupBox>
    <Button Grid.Row="2"
            Grid.Column="1"
            Width="75"
            Height="23"
            Margin="5,5,85,5"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Click="buttonCancel_Click"
            Content="{x:Static resx:NASResources.Cancel}" />
    <Button Grid.Row="2"
            Grid.Column="1"
            Width="75"
            Height="23"
            Margin="5"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Click="buttonOK_Click"
            Content="{x:Static resx:NASResources.OK}" />
  </Grid>
</Window>
