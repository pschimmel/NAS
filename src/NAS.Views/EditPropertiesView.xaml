<Grid x:Class="NAS.Views.EditPropertiesView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:resx="clr-namespace:NAS.Resources;assembly=NAS.Resources"
      xmlns:ui="clr-namespace:ES.Tools.UI;assembly=ES.Tools"
      xmlns:viewmodels="clr-namespace:NAS.ViewModels;assembly=NAS.ViewModels"
      d:DataContext="{d:DesignInstance Type=viewmodels:EditPropertiesViewModel}"
      d:DesignHeight="250"
      d:DesignWidth="550"
      mc:Ignorable="d">
  <Grid.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ui:SharedResourceDictionary Source="pack://application:,,,/NAS.Views;component/CommonResources.xaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Grid.Resources>
  <Grid.ColumnDefinitions>
    <ColumnDefinition Width="Auto" />
    <ColumnDefinition Width="Auto" />
    <ColumnDefinition Width="Auto" />
    <ColumnDefinition Width="*" />
  </Grid.ColumnDefinitions>
  <Grid.RowDefinitions>
    <RowDefinition Height="Auto" />
    <RowDefinition />
    <RowDefinition Height="Auto" />
    <RowDefinition Height="Auto" />
    <RowDefinition Height="Auto" />
  </Grid.RowDefinitions>
  <TextBlock Margin="5" Text="{x:Static resx:NASResources.ProjectName}" />
  <TextBox Grid.Column="1"
           Grid.ColumnSpan="3"
           Margin="2"
           Text="{Binding Name}" />
  <TextBlock Grid.Row="1"
             Margin="5"
             Text="{x:Static resx:NASResources.Description}" />
  <TextBox Grid.Row="1"
           Grid.Column="1"
           Grid.ColumnSpan="3"
           Margin="2"
           Text="{Binding Description}"
           TextWrapping="Wrap"
           VerticalScrollBarVisibility="Auto" />
  <TextBlock Grid.Row="2"
             Margin="5"
             Text="{x:Static resx:NASResources.StartDate}" />
  <DatePicker Grid.Row="2"
              Grid.Column="1"
              Width="150"
              Margin="2"
              HorizontalAlignment="Left"
              SelectedDate="{Binding StartDate}" />
  <TextBlock Grid.Row="2"
             Grid.Column="2"
             Margin="5"
             Text="{x:Static resx:NASResources.FinishDate}" />
  <DatePicker Grid.Row="2"
              Grid.Column="3"
              Width="150"
              Margin="2"
              HorizontalAlignment="Left"
              SelectedDate="{Binding EndDate}" />
  <TextBlock Grid.Row="3"
             Margin="5"
             Text="{x:Static resx:NASResources.DataDate}" />
  <DatePicker Grid.Row="3"
              Grid.Column="1"
              Width="150"
              Margin="2"
              HorizontalAlignment="Left"
              SelectedDate="{Binding DataDate}" />
  <TextBlock Grid.Row="3"
             Grid.Column="2"
             Margin="5"
             Text="{x:Static resx:NASResources.StandardCalendar}" />
  <ComboBox Grid.Row="3"
            Grid.Column="3"
            Margin="2"
            ItemsSource="{Binding Schedule.Calendars}"
            SelectedItem="{Binding Schedule.StandardCalendar}" />
  <TextBlock Grid.Row="4"
             Grid.ColumnSpan="4"
             Margin="5"
             FontWeight="Bold"
             Foreground="Red"
             Text="{Binding ErrorMessage}"
             Visibility="{Binding HasErrors, Converter={StaticResource VisibilityConverter}}" />
</Grid>
