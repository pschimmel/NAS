<Window x:Class="NAS.WindowGetText"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:resx="clr-namespace:NAS.Resources;assembly=NAS.Resources"
        Title="{Binding Title}"
  Height="125" Width="450" WindowStartupLocation="CenterScreen" ShowInTaskbar="False" Icon="pack://application:,,,/NAS.View;component/Images/Edit.png" ResizeMode="NoResize">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition />
      <RowDefinition Height="Auto" />
      <RowDefinition />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition />
    </Grid.ColumnDefinitions>
    <TextBlock Text="{Binding Label}" Margin="5" Grid.Row="1" />
    <TextBox Text="{Binding Text}" Name="textBoxText" Grid.Column="1" Grid.Row="1" Margin="2" />
    <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.ColumnSpan="2" HorizontalAlignment="Right" Margin="2">
      <Button Content="{x:Static resx:NASResources.OK}" MinWidth="75" IsDefault="True" Click="buttonOK_Click" />
      <Button Content="{x:Static resx:NASResources.Cancel}" MinWidth="75" Margin="2,0,0,0" IsCancel="True" Click="ButtonCancel_Click" />
    </StackPanel>
  </Grid>
</Window>
