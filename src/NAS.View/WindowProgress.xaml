<Window x:Class="NAS.WindowProgress"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tools="clr-namespace:ES.Tools.Controls;assembly=ES.Tools"
        Title="WindowProgress" Height="200" Width="200" WindowStyle="None" Opacity="1" WindowStartupLocation="CenterScreen" BorderBrush="White" AllowsTransparency="True" Background="#00000000" ShowInTaskbar="False">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="125"/>
      <RowDefinition />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition />
      <ColumnDefinition Width="125" />
      <ColumnDefinition />
    </Grid.ColumnDefinitions>
    <tools:ProgressCircle Name="progressBar" Grid.Column="1" Value="33" BorderThickness="15" Foreground="Goldenrod" Background="Transparent" IsRotating="True" />
    <TextBlock Name="textBlock" TextTrimming="WordEllipsis" Grid.Row="1" Grid.ColumnSpan="3" Margin="5" VerticalAlignment="Top" HorizontalAlignment="Center" FontWeight="Bold" TextWrapping="Wrap" TextAlignment="Center" FontSize="13">
      <TextBlock.Effect>
        <DropShadowEffect ShadowDepth="0" Direction="0" Color="White" Opacity="1" BlurRadius="10" RenderingBias="Quality" />
      </TextBlock.Effect>
    </TextBlock>
  </Grid>
</Window>
